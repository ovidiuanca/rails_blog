<!DOCTYPE html>
<html>
<head>
  <title>MyBlog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="wrapper">

<header>
	<%= link_to image_tag("logo.png", alt: "IDK what alt: means"), 
	{:controller => 'pages', :action => 'home'},
	{:class => 'websiteLogo'} %>

	<%= link_to 'Awesome Blog', 
	{:controller => 'pages', :action => 'home'},
	{:class => 'websiteTitle'} %>
</header>

<nav id="horzNav">
	<p>
		<%= link_to 'Home', { :controller => 'pages', :action => 'home' } %>
		<%= link_to 'About', { :controller => 'pages', :action => 'about' } %>
		<%= link_to 'Directions', { :controller => 'pages', :action => 'directions' } %>
		<%= link_to 'Rahat de ploaie', { :controller => 'users', :action => 'index' } %>
		<%= link_to 'Articles', { :controller => 'articles', :action => 'index' } %>
	</p>
</nav>

<main id="content">

<%= yield %>

</main>
</div>
</body>
</html>
